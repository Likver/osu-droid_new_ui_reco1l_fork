<resources> <!--This resource file is intended to globally contain predefined View styles-->

    <!--Texts-->
    <style name="text">
        <item name="fontFamily">@font/varela_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_selector</item>
        <item name="android:textSize">@dimen/textS</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColorLink">@color/accent</item>
        <item name="android:linksClickable">true</item>
    </style>

    <style name="largeText" parent="text">
        <item name="android:textSize">@dimen/textM</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
    </style>

    <!--Buttons-->
    <style name="icon_button">
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="cardElevation">@dimen/buttonCardElevation</item>
        <item name="cardBackgroundColor">@color/buttonBackground</item>
        <item name="cardCornerRadius">@dimen/buttonCornerRadius</item>
        <item name="contentPaddingLeft">@dimen/M</item>
        <item name="contentPaddingRight">@dimen/M</item>
    </style>

    <style name="settings_panel_tab_button" parent="icon_button">
        <item name="android:paddingLeft">@dimen/tabIndicatorSize</item>
        <item name="android:layout_width">@dimen/settingsPanelNavBarWidth</item>
        <item name="android:layout_height">@dimen/settingsPanelButtonHeight</item>
    </style>

    <!--ProgressBar & SeekBar-->
    <style name="song_seek_bar">
        <item name="android:progressDrawable">@drawable/song_seek_bar_progress</item>
        <item name="android:thumb">@drawable/song_seek_bar_thumb</item>
        <item name="android:maxHeight">@dimen/musicPlayerSongShapeHeight</item>
        <item name="android:thumbOffset">@dimen/songSeekBarThumbOffset</item>
        <item name="android:splitTrack">false</item>
    </style>

    <!--Shape overlays-->
    <style name="avatar_shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/topBarAvatarCorners</item>
    </style>

    <style name="song_seekbar_shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/songSeekBarCornerRadius</item>
    </style>

    <!--Layouts-->
    <style name="panel">
        <item name="android:layout_width">@dimen/panelWidth</item>
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">@dimen/globalCorners</item>
        <item name="cardBackgroundColor">@color/backgroundSecondary</item>
        <item name="cardElevation">@dimen/panelCardElevation</item>
        <item name="android:layout_margin">@dimen/panelMargins</item>
    </style>

    <style name="panelSeparatorView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/panelSeparatorHeight</item>
        <item name="android:background">@color/panelSeparator</item>
    </style>

    <!--Text badges-->
    <style name="propertyBadge" parent="text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/XS</item>
        <item name="android:drawablePadding">@dimen/XS</item>

        <item name="android:paddingTop">@dimen/XXS</item>
        <item name="android:paddingBottom">@dimen/XXS</item>
        <item name="android:paddingLeft">@dimen/XS</item>
        <item name="android:paddingRight">@dimen/S</item>

        <item name="android:backgroundTint">@color/propertyBackground</item>
        <item name="android:background">@drawable/round_shape</item>
        <item name="android:textSize">@dimen/textXS</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="smallPropertyBadge" parent="text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/XS</item>

        <item name="android:paddingTop">@dimen/XXS</item>
        <item name="android:paddingBottom">@dimen/XXS</item>
        <item name="android:paddingLeft">@dimen/_3sdp</item>
        <item name="android:paddingRight">@dimen/XS</item>

        <item name="android:drawablePadding">@dimen/_3sdp</item>

        <item name="android:backgroundTint">@color/scoreboardItemBadgeBackground</item>
        <item name="android:background">@drawable/round_shape</item>
        <item name="android:textSize">@dimen/textXXS</item>
    </style>

</resources>